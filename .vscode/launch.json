    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug in Docker",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 5858,
            "preLaunchTask": "Compile and Run Debugging Container",
            "postDebugTask": "Stop Container",
            "sourceMaps": true,
            "outFiles": [
                "./dist/**/*.js"
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/srv",
            // "sourceMapPathOverrides": {
            //     "*": "${workspaceFolder}/*"
            // },
            "skipFiles": [
                "<node_internals>/**/*.js",
            ],
            // "trace": true
        }
    ]
}